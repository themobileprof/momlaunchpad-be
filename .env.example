# Server Configuration, Production: Set ENV=production + GIN_MODE=release
PORT=8080
ENV=development
GIN_MODE=debug

# Database
# Local: postgresql://user:password@localhost:5432/momlaunchpad?sslmode=disable
# Docker: postgresql://user:password@host.docker.internal:5432/momlaunchpad?sslmode=disable
DATABASE_URL=postgresql://postgres:password@localhost:5432/momlaunchpad?sslmode=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_CONNECTIONS=5

# Redis (Optional - for caching)
# Local: redis://localhost:6379
# Docker: redis://host.docker.internal:6379
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=1000
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_TIMEOUT=30s

# Authentication (Ubuntu generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS
# Note: *.momlaunchpad.com allows any subdomain (app, admin, staging, etc.)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://*.momlaunchpad.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Memory Configuration
SHORT_TERM_MEMORY_SIZE=10
LONG_TERM_FACT_CONFIDENCE_THRESHOLD=0.7

# Calendar
CALENDAR_SUGGESTION_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FEATURE_SAVINGS=true
FEATURE_MULTILINGUAL=true

# Twilio Voice (Optional - for premium voice calls feature)
# Get credentials from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Admin
ADMIN_EMAIL=admin@momlaunchpad.com
ADMIN_INITIAL_PASSWORD=change_this_password
