# Server Configuration
PORT=8080
ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/momlaunchpad?sslmode=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_CONNECTIONS=5

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=1000
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_TIMEOUT=30s

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://app.momlaunchpad.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Memory Configuration
SHORT_TERM_MEMORY_SIZE=10
LONG_TERM_FACT_CONFIDENCE_THRESHOLD=0.7

# Calendar
CALENDAR_SUGGESTION_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FEATURE_SAVINGS=false
FEATURE_MULTILINGUAL=true

# Admin
ADMIN_EMAIL=admin@momlaunchpad.com
ADMIN_INITIAL_PASSWORD=change_this_password
